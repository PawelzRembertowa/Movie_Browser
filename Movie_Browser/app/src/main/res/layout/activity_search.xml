<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.rent.movieapp.search.SearchActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/poster_headerID"
        android:layout_width="match_parent"
        android:layout_height="150dp">

    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/poster_headerID"
        android:layout_marginTop="16dp"
        android:id="@+id/textInputLayoutID"
        android:layout_toLeftOf="@+id/search_buttonID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/textInputEditTextID"
            android:imeOptions="actionDone"
            android:lines="1"
            android:hint="@string/czego_szukasz"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:layout_below="@+id/poster_headerID"
        android:layout_marginTop="26dp"
        android:layout_margin="4dp"
        android:id="@+id/search_buttonID"
        app:srcCompat="@drawable/ic_search_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textInputLayoutID"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/year_checkboxID"
        android:layout_below="@+id/textInputLayoutID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Film z roku:"/>

    <NumberPicker
        android:id="@+id/numberPickerID"
        android:layout_marginLeft="26dp"
        android:visibility="gone"
        android:layout_below="@+id/year_checkboxID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </NumberPicker>

    <CheckBox
        android:id="@+id/type_checkboxID"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textInputLayoutID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Film typu:"/>

    <RadioGroup
        android:id="@+id/radio_groupID"
        android:visibility="gone"
        android:layout_below="@+id/type_checkboxID"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/radio_moviesID"
            android:text="Filmy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/radio_serialsID"
            android:text="Seriale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/radio_gamesID"
            android:text="Gry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/radio_episodesID"
            android:text="Odcinki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RadioGroup>

</RelativeLayout>
</ScrollView>