<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.rent.movieapp.SearchActivity">


    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="16dp"
        android:id="@+id/textInputLayoutID"
        android:layout_toLeftOf="@+id/search_buttonID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/textInputEditTextID"
            android:lines="1"
            android:hint="@string/czego_szukasz"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:layout_marginTop="26dp"
        android:layout_margin="4dp"
        android:id="@+id/search_buttonID"
        app:srcCompat="@drawable/ic_search_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textInputLayoutID"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
